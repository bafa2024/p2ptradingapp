echo "ğŸ”’ Checking for sensitive files..."
if git diff --cached --name-only | grep -E "\.(env|key|pem|p12)$"; then
  echo "âŒ Error: Attempting to commit sensitive files!"
  echo "Please remove these files from your commit:"
  git diff --cached --name-only | grep -E "\.(env|key|pem|p12)$"
