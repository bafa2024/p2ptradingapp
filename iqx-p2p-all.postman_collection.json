{
  "info": {
    "name": "IQX P2P - Wallet + Orders + Transactions",
    "_postman_id": "iqx-p2p-wallet-orders-transactions",
    "description": "Postman collection for testing Wallet, Orders, Matching Engine (implicit), and Transactions in IQX P2P Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Wallet",
      "item": [
        {
          "name": "Get Wallet Balance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/wallet/balance",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "wallet",
                "balance"
              ]
            }
          }
        },
        {
          "name": "Deposit Funds",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/wallet/deposit",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "wallet",
                "deposit"
              ]
            }
          }
        },
        {
          "name": "Withdraw Funds",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/wallet/withdraw",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "wallet",
                "withdraw"
              ]
            }
          }
        },
        {
          "name": "Withdraw Insufficient Funds",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 999999\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/wallet/withdraw",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "wallet",
                "withdraw"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
