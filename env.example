FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id

# =============================================================================
# File Upload Configuration
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads
UPLOAD_TEMP_PATH=./temp

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# Security Configuration
# =============================================================================
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# =============================================================================
# WebSocket Configuration
# =============================================================================
WS_PORT=3001
WS_PATH=/socket.io
WS_CORS_ORIGIN=http://localhost:3000

# =============================================================================
# Mobile App Configuration
# =============================================================================
MOBILE_APP_URL=http://localhost:3000
MOBILE_APP_VERSION=1.0.0
MOBILE_APP_BUILD_NUMBER=1

# =============================================================================
# Web App Configuration
# =============================================================================
WEB_APP_URL=http://localhost:3002
WEB_APP_PORT=3002

# =============================================================================
# Admin Dashboard Configuration
# =============================================================================
ADMIN_DASHBOARD_URL=http://localhost:3003
ADMIN_DASHBOARD_PORT=3003
ADMIN_EMAIL=admin@p2p-platform.com
ADMIN_PASSWORD=admin123

# =============================================================================
# External Services
