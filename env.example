# Application Configuration
# =============================================================================
NODE_ENV=development
APP_NAME=P2P Crypto Trading Platform
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# =============================================================================
# API Configuration
# =============================================================================
PORT=8080
API_PORT=3000
API_HOST=localhost
API_BASE_URL=http://localhost:3000/api/v1
