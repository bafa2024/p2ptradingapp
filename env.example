# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=false
SWAGGER_UI_PATH=/api/docs
API_DOCUMENTATION_URL=/api
